{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "lib": ["ES2022"],
        "sourceMap": false,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "Node16",
        "noImplicitAny": true,
        "outDir": "./lib",
        "removeComments": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": ["src"]
}
