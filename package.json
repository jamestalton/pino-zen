{
    "name": "pino-zen",
    "version": "1.0.15",
    "description": "Zen for Pino logging",
    "author": "James Talton <talton@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/jamestalton/pino-zen#readme",
    "bugs": {
        "url": "https://github.com/jamestalton/pino-zen/issues"
    },
    "keywords": [
        "pino"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/jamestalton/pino-zen.git"
    },
    "bin": {
        "pino-zen": "./lib/pino-zen.js"
    },
    "scripts": {
        "build": "rm -rf lib && tsc",
        "test": "jest --verbose --color --ci",
        "lint": "eslint src test --ext .ts --max-warnings=0",
        "lint:fix": "eslint src test --ext .ts --fix",
        "check": "prettier --check **/*.ts **/*.json !coverage/** !lib/** !**/package-lock.json",
        "check:fix": "prettier --write **/*.ts **/*.json !coverage/** !lib/** !**/package-lock.json",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix && npm test && npm run lint && npm run check"
    },
    "devDependencies": {
        "@types/jest": "^26.x.x",
        "@types/node": "^14.x.x",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.2.0",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.x.x",
        "prettier": "^2.1.2",
        "ts-jest": "^26.x.x",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0-pre.63",
        "typescript": "^4.0.3"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": [
                "./tsconfig.json",
                "./test/tsconfig.json"
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-use-before-define": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/no-floating-promises": [
                "error",
                {
                    "ignoreVoid": true
                }
            ],
            "no-console": "error",
            "no-process-exit": "error"
        }
    },
    "jest": {
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        },
        "coverageReporters": [
            "text",
            "text-summary",
            "html"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!**/node_modules/**",
            "!<rootDir>/src/typings.d.ts"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "jsx",
            "node",
            "ts",
            "tsx"
        ],
        "setupFiles": [
            "<rootDir>/test/jest.ts"
        ],
        "preset": "ts-jest",
        "testMatch": null
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "commander": "^6.1.0"
    }
}
