{
    "name": "pino-zen",
    "version": "2.0.8",
    "description": "Zen for Pino logging",
    "author": "James Talton <talton@gmail.com>",
    "license": "MIT",
    "type": "module",
    "homepage": "https://github.com/jamestalton/pino-zen#readme",
    "bugs": {
        "url": "https://github.com/jamestalton/pino-zen/issues"
    },
    "keywords": [
        "pino"
    ],
    "files": [
        "lib"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/jamestalton/pino-zen.git"
    },
    "main": "./lib/pino-zen.js",
    "types": "./lib/pino-zen.d.ts",
    "exports": {
        ".": {
            "types": "./lib/pino-zen.d.ts",
            "default": "./lib/pino-zen.js"
        }
    },
    "bin": {
        "pino-zen": "./lib/pino-zen-cli.js"
    },
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "start": "npm run build && cat example.txt | node lib/pino-zen-cli.js",
        "build": "rm -rf lib && tsc && printf '%s\n' '#!/usr/bin/env node' \"$(cat lib/pino-zen-cli.js)\" > lib/pino-zen-cli.js",
        "tsc": "tsc --noEmit",
        "lint": "biome lint src",
        "format": "biome format src --write",
        "test": "npm run lint && npm run tsc && node --experimental-strip-types --test tests/*.test.ts"
    },
    "dependencies": {
        "chalk": "^5.6.2",
        "pino-abstract-transport": "^3.0.0",
        "sonic-boom": "^4.2.0",
        "split2": "^4.2.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.13",
        "@types/node": "^25.x.x",
        "@types/split2": "^4.2.3",
        "typescript": "^5.9.3"
    }
}
